{
    "overrides": [
        {
            "files":   "*.{js,ts,jsx,tsx}",
            "options": {
                "semi":                  true,
                "singleQuote":           true,
                "tabWidth":              2,
                "trailingComma":         "es5",
                "arrowParens":           "avoid",
                "bracketSpacing":        true,
                "printWidth":            120,
                "proseWrap":             "preserve",
                "useTabs":               false,
                "alignObjectProperties": true
            }
        }
    ]
}
